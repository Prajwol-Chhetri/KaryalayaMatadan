    <div class="col-md-6">
        <div class="card text-white bg-dark">
            <div class="card-header text-center">
                <h4 class="font-weight-bold">Basic Web Forms</h4>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <a href="@Url.Action("Index", null, new { area = string.Empty, controller = "Employees" }, Request.Url.Scheme)">
                        <span>Employees</span>
                    </a>
                </li>
                <li class="list-group-item">
                    <a href="@Url.Action("Index", null, new { area = string.Empty, controller = "Departments" }, Request.Url.Scheme)">
                        <span>Departments</span>
                    </a>
                </li>
                <li class="list-group-item">
                    <a href="@Url.Action("Index", null, new { area = string.Empty, controller = "Addresses" }, Request.Url.Scheme)">
                        <span>Addresses</span>
                    </a>
                </li>
                <li class="list-group-item">
                    <a href="@Url.Action("Index", null, new { area = string.Empty, controller = "Roles" }, Request.Url.Scheme)">
                        <span>Roles</span>
                    </a>
                </li>
                <li class="list-group-item">
                    <a href="@Url.Action("Index", null, new { area = string.Empty, controller = "JobHistories" }, Request.Url.Scheme)">
                        <span>JobHistories</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card text-white bg-dark">
            <div class="card-header text-center">
                <h4 class="font-weight-bold">Complex Web Forms</h4>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <a href="@Url.Action("Index", null, new { area = string.Empty, controller = "EmployeeJobHistories" }, Request.Url.Scheme)">
                        <span>Employee Job Histories</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>